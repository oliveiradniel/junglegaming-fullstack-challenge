{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "declaration": true,
    "module": "CommonJS",
    "target": "ES2023",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
